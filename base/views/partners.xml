<?xml version="1.0" encoding="utf-8"?>
<yep>
    <data>

        <view id="base_view_partner_tree">
            <field name="name">res.partner.tree</field>
            <field name="model">ResPartner</field>
            <field name="arch" type="xml">
                <tree string="Partners">
                    <field name="Name"/>
                    <field name="Function"/>
                    <field name="Lang"/>
                    <field name="Ref"/>
                </tree>
            </field>
        </view>

        <view id="base_view_partner_form">
            <field name="name">res.partner.form</field>
            <field name="model">ResPartner</field>
            <field name="arch" type="xml">
                <form>
                    <h1><label for="Name"/> : <field name="Name"/></h1>
                    <group>
                        <field name="Function"/>
                        <field name="Lang"/>
                        <field name="Ref"/>
                    </group>
                </form>
            </field>
        </view>

        <view id="base_view_partner_search">
            <field name="name">res.partner.search</field>
            <field name="model">ResPartner</field>
            <field name="arch" type="xml">
                <search string="Partners">
                    <field name="Name" filter_domain="['|', '|', ('Name','ilike',self), ('Email','ilike',self)]"
                           string="Partner"/>
                </search>
            </field>
        </view>

        <action id="base_action_res_partner">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Partners</field>
            <field name="res_model">ResPartner</field>
            <field name="view_id" ref="base_view_partner_tree"/>
            <field name="search_view_id" ref="base_view_partner_search"/>
            <field name="view_mode">tree,form</field>
        </action>

        <menuitem id="base_menu_action_partner" name="Partners" parent="base_menu_partners" sequence="1"
                  action="base_action_res_partner"/>

    </data>
</yep>
