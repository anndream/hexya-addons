<hexya>
    <data>
        <!--   Product Price List -->
        <view id="product_wiz_product_price_list" model="WizProductPriceList">
                <form string="Price List">
                    <group string="Calculate Product Price per Unit Based on Pricelist Version.">
                        <field name="PriceList" widget="selection"/>
                        <field name="Qty1"/>
                        <field name="Qty2"/>
                        <field name="Qty3"/>
                        <field name="Qty4"/>
                        <field name="Qty5"/>
                    </group>
                    <footer>
                        <button name="print_report" string="Print"  type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
        </view>


        <action id="product_launch_wiz_product_price_list"
                type="ir.actions.act_window"
                name="Price List"
                src_model="ProductPriceList"
                model="WizProductPriceList"
                view_mode="form"
                target="new"/>

    </data>
</hexya>
